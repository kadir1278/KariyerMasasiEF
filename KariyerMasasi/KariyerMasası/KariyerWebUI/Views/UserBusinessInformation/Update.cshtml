@model KariyerEntity.Entity.UserBusinessInformation
@if (Model != null)
{
    <div class="modal fade" id="detailBusinessModal" aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Bilgisayar Bilgisi Görüntüle</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>×</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("UpdateBusinessInformation", "UserBusinessInformation", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {@Html.HiddenFor(x => x.ID)
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Firma İsmi</label>
                            <input required type="text" class="form-control" value="@Model.CompanyName" name="CompanyName" placeholder="Firma İsim Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Görevi</label>
                            <input required type="text" class="form-control" value="@Model.Duty" name="Duty" placeholder="Görevi Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Açıklama</label>
                            <input required type="text" class="form-control" value="@Model.Description" name="Description" placeholder="Açıklama Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Başlangıç Tarihi</label>
                            <input type="text" class="form-control mdate" value="@Model.StartingDate.ToString("dd.MM.yyyy")" name="StartingDate" placeholder="Başlangıç Tarihi Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Çıkış Tarihi</label>
                            <input type="text" class="form-control mdate" value="@Model.FinishDate.ToString("dd.MM.yyyy")" name="FinishDate" placeholder="Çıkış Tarihi Giriniz...">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="closeUser" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-success light ">Güncelle</button>
                    </div>
                }
                </div>
            </div>
        </div>
    </div>
}