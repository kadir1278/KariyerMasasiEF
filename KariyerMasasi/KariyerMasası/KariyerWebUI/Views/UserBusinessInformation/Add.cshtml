@model KariyerEntity.Entity.UserBusinessInformation
<div class="modal fade" id="businessModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Kullanıcı İş Bilgisi Ekle</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="business-add-form" method="post" role="form">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Firma İsmi</label>
                            <input required type="text" class="form-control" name="BusinessCompanyName" placeholder="Firma İsim Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Görevi</label>
                            <input required type="text" class="form-control" name="BusinessDuty" placeholder="Görevi Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Açıklama</label>
                            <input required type="text" class="form-control" name="BusinessDescription" placeholder="Açıklama Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Başlangıç Tarihi</label>
                            <input type="text" class="form-control mdate" name="BusinessStartingDate" placeholder="Başlangıç Tarihi Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Çıkış Tarihi</label>
                            <input type="text" class="form-control mdate" name="BusinessFinishDate" placeholder="Çıkış Tarihi Giriniz...">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="closeUser" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="submit"  class="btn btn-success light">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
