
<div class="modal fade" id="workModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">İş Bilgisi Ekle</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>
            <div class="modal-body" id="addModal">

                <form id="user-work-form" action="/kullanici-is-ekle" submit-success="succesSubmit">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Firma</label>
                            <input type="text" class="form-control" required name="CompanyName" placeholder="Firma Giriniz...">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Açıklama</label>
                            <textarea class="form-control" rows="4" required name="Description" id="comment"></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Görevi</label>
                            <input type="text" class="form-control" required name="Duty" placeholder="Görev Giriniz...">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>İşe Giriş Tarihi</label>
                            <input type="datetime" class="form-control mdate" required name="StartingDate" placeholder="İşe Giriş Tarihi Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>İşten Çıkış Tarihi</label>
                            <input type="datetime" class="form-control mdate" required name="FinishDate" placeholder="İşe Giriş Tarihi Giriniz...">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="closeUser" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="submit" submit-form="#user-work-form" class="btn btn-success light">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>