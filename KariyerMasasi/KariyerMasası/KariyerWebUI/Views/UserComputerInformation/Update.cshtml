@model KariyerEntity.Entity.UserComputerInformation
@if (Model != null)
{
    <div class="modal fade" id="detailComputerModal" aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Bilgisayar Bilgisi Görüntüle</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>×</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("UpdateComputerInformation", "UserComputerInformation", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {@Html.HiddenFor(x => x.ID)
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>İsim</label>
                            <input type="text" class="form-control" value="@Model.Name" name="Name" placeholder="İsim Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Seviye</label>
                            <select class="custom-select2 form-control" name="Description">
                                <optgroup label="Seviye Seçiniz">
                                    <option value="@Model.Description">@Model.Description</option>
                                    <option @(Model.Description == "Başlangıç" ? "hidden " : "") value="Başlangıç">Başlangıç</option>
                                    <option @(Model.Description == "Temel" ? "hidden " : "") value="Temel">Temel</option>
                                    <option @(Model.Description == "Orta" ? "hidden " : "") value="Orta">Orta</option>
                                    <option @(Model.Description == "İleri" ? "hidden " : "") value="İleri">İleri</option>
                                    <option @(Model.Description == "Uzman" ? "hidden " : "") value="Uzman">Uzman</option>
                                </optgroup>
                            </select>
                        </div>
                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="closeUser" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-success light ">Güncelle</button>
                    </div>
                }
                </div>
            </div>
        </div>
    </div>
}