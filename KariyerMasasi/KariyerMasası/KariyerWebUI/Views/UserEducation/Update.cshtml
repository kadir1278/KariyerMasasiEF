@model KariyerEntity.Entity.UserEducation
@if (Model != null)
{
    <div class="modal fade" id="detailEducationModal" aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Eğitim Görüntüle</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>×</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("UpdateEducation", "UserEducation", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {@Html.HiddenFor(x => x.ID)
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Kurum Adı</label>
                            <input type="text" class="form-control" value="@Model.SchoolName" name="SchoolName" placeholder="Kurum Adı Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Mezun Durumu</label>
                            <input type="text" class="form-control" value="@Model.GraduationStatus" name="GraduationStatus" placeholder="Mezun Durumu Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Eğitim Seviyesi</label>
                            <input type="text" class="form-control" value="@Model.GraduationGrade" name="GraduationGrade" placeholder="Eğitim Seviyesi Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Departman</label>
                            <input type="text" class="form-control" value="@Model.Department" name="Department" placeholder="Departman Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Mezun Tarihi</label>
                            <input type="text" class="form-control mdate" value="@Model.GraduationYear.ToString("dd.MM.yyyy")" name="GraduationYear" placeholder="Mezun Tarihi Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Açıklama</label>
                            <input type="text" class="form-control" value="@Model.Description" name="Description" placeholder="Açıklama Giriniz...">
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" id="closeUser" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-success light ">Güncelle</button>
                    </div>
                }
                </div>
            </div>
        </div>
    </div>
}