@model KariyerEntity.Entity.UserLanguage
<div class="modal fade" id="languageModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Kullanıcı Dil Bilgisi Ekle</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="language-add-form" method="post" role="form">
                    <div class="form-row">

                        <div class="form-group col-md-6">
                            <label>Dil Seçimi</label>
                            <input required type="text" class="form-control" name="LangLanguage" placeholder="Dil Giriniz...">
                        </div>

                        <div class="form-group col-md-6">
                            <label>Konuşma Seviyesi</label>
                            <select required class="custom-select2 form-control" name="LangSpeakingLevel">
                                <optgroup label="Seviye Seçiniz">
                                    <option value="Başlangıç">Başlangıç</option>
                                    <option value="Temel">Temel</option>
                                    <option value="Orta">Orta</option>
                                    <option value="İleri">İleri</option>
                                    <option value="Uzman">Uzman</option>
                                </optgroup>
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Yazma Seviyesi</label>
                            <select required class="custom-select2 form-control" name="LangWritingLevel">
                                <optgroup label="Seviye Seçiniz">
                                    <option value="Başlangıç">Başlangıç</option>
                                    <option value="Temel">Temel</option>
                                    <option value="Orta">Orta</option>
                                    <option value="İleri">İleri</option>
                                    <option value="Uzman">Uzman</option>
                                </optgroup>
                            </select>
                        </div>
                      
                        <div class="form-group col-md-6">
                            <label>Dinleme Seviyesi</label>
                            <select required class="custom-select2 form-control" name="LangListeningLevel">
                                <optgroup label="Seviye Seçiniz">
                                    <option value="Başlangıç">Başlangıç</option>
                                    <option value="Temel">Temel</option>
                                    <option value="Orta">Orta</option>
                                    <option value="İleri">İleri</option>
                                    <option value="Uzman">Uzman</option>
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group col-md-12">
                            <label>Açıklama</label>
                            <input required type="text" class="form-control" name="LangSeminarDescription" placeholder="Açıklama Giriniz...">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="closeUser" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="submit" id="addBtn" class="btn btn-success light">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
