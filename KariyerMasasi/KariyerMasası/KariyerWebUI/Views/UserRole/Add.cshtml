@model KariyerWebUI.Models.UserRoleViewModel
<div class="modal fade" id="basicModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Özel Durum Ekle</h5>
                <button type="button" onclick="GetData()" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>
            <div class="modal-body" id="addModal">
                <form id="userrole-add-form" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Kullanıcı Seçin</label>
                            <select required class="custom-select2 form-control"  name="AddUserID">
                                <optgroup label="Kullanıcılar">
                                    @foreach (var item in Model.Users)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group col-md-12">
                            <label>Sistem Yetkisi Seçin</label>
                            <select required class="custom-select2 form-control"  name="AddRoleID">
                                <optgroup label="Özel Durumlar">
                                    @foreach (var item in Model.Roles)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </optgroup>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="closeUser" onclick="GetData()" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="submit" id="addBtn" class="btn btn-success light">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>