@model KariyerEntity.Entity.SpecialDirectory
<div class="modal fade" id="specialModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Özel Durum Ekle</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="special-add-form" method="post" role="form">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Özel Durum</label>
                            <select required class="custom-select2 form-control" name="AddUserSpecialTypeID">
                                <optgroup label="Özel Durum">
                                    @foreach (var item in ViewBag.UserSpecialTypeID)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </optgroup>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="closeUser" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="submit" id="addBtn" class="btn btn-success light">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
