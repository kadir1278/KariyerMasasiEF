@model KariyerEntity.Entity.UserComputerInformation
<div class="modal fade" id="computerModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bilgisayar Bilgisi Ekle</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="computer-add-form" method="post" role="form">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>İsim</label>
                            <input required type="text" class="form-control" name="computerName" placeholder="İsim Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Açıklama</label>
                            <input required type="text" class="form-control" name="computerDescription" placeholder="Açıklama Giriniz...">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="closeUser" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="submit"  class="btn btn-success light">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
