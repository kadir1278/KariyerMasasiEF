@model KariyerEntity.Entity.User
<div class="modal fade" id="basicModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Kullanıcı Ekle</h5>
                <button type="button" onclick="GetUserData()" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>
            <div class="modal-body" id="addModal">
                <form id="user-add-form" method="post" role="form">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>İsim</label>
                            <input required type="text" class="form-control" name="AddName" placeholder="İsim Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Soyisim</label>
                            <input required type="text" class="form-control" name="AddSurname" placeholder="Soyisim Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>E-Mail</label>
                            <input required type="email" class="form-control" name="AddEMail" placeholder="E-Mail Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Şifre</label>
                            <input required type="password" class="form-control" name="AddPassword" placeholder="Şifre Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Telefon</label>
                            <input required type="tel" class="form-control" name="AddPhone" placeholder="Telefon Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Ülke</label>
                            <input required type="text" class="form-control" name="AddCountry" placeholder="Ülke Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Şehir</label>
                            <input required type="text" class="form-control" name="AddCity" placeholder="Şehir Giriniz...">
                        </div> <div class="form-group col-md-6">
                            <label>İlçe/Kasaba</label>
                            <input required type="text" class="form-control" name="AddTown" placeholder="İlçe/Kasaba Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Adres</label>
                            <textarea required class="form-control" rows="4" name="AddAddress" id="comment" placeholder="Adres Giriniz..."></textarea>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Kullanıcı Tipi</label>
                            <select required class="custom-select2 form-control" name="AddType">
                                <optgroup label="Cinsiyet">
                                    <option value="Öğrenci">Öğrenci</option>
                                    <option value="Mezun">Mezun</option>
                                    <option value="Stajyer">Stajyer</option>
                                    <option value="Özel Kişi">Özel Kişi</option>
                                    <option value="Rehber">Rehber</option>
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Ünvan</label>
                            <input required type="text" class="form-control" name="AddTitle" placeholder="Ünvan Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Açıklama</label>
                            <textarea required class="form-control" rows="4" name="AddDescription" id="comment" placeholder="Adres Giriniz..."></textarea>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Çalışma Alanı</label>
                            <select required class="custom-select2 form-control" name="AddBusinessAreaID">
                                <optgroup label="Çalışma Alanı">
                                    @foreach (var item in ViewBag.BusinessAreaID)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Askerlik Durumu</label>
                            <select required class="custom-select2 form-control" name="AddMilitaryStatus">
                                <optgroup label="Cinsiyet">
                                    <option value="Yapıldı">Yapıldı</option>
                                    <option value="Yapılmadı">Yapılmadı</option>
                                    <option value="Tecilli">Tecilli</option>
                                    <option value="Muaf">Muaf</option>
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Cinsiyet</label>
                            <select required class="custom-select2 form-control" name="AddGender">
                                <optgroup label="Cinsiyet">
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadın">Kadın</option>
                                    <option value="Kadın">Belirtmek İstemiyorum</option>
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Evlilik Durumu</label>
                            <select required class="custom-select2 form-control" name="AddMarriageStatus">
                                <optgroup label="Medeni Durum">
                                    <option value="Evli">Evli</option>
                                    <option value="Bekar">Bekar</option>
                                    <option value="Dul">Dul</option>
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group col-md-12">
                            <label>Hobi</label>
                            <textarea required class="form-control" rows="4" name="AddHobby" id="comment" placeholder="Hobi Giriniz..."></textarea>
                        </div>
                        <div class="form-group col-md-12" onclick="upload_user_photo()">
                            <button type="button" class="file-input btn light btn-primary">Fotoğraf Ekle</button>
                        </div>
                        <div class="form-group col-md-12">
                            <div class="update-photo">
                                <img hidden style="width: 250px;height: 250px;" class="image" id="img_user_photo" alt="">
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" id="closeUser" onclick="GetUserData()" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="submit" id="addBtn" class="btn btn-success light">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>