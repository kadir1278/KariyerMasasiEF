@model KariyerEntity.Entity.Admin
<div class="modal fade" id="basicModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Admin Ekle</h5>
                <button type="button" onclick="GetAdminData()" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>
            <div class="modal-body" id="addModal">
                <form id="admin-add-form" action="/yonetici-ekle">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>İsim</label>
                            <input type="text" class="form-control" name="Name" placeholder="İsim Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Soyisim</label>
                            <input type="text" class="form-control" name="Surname" placeholder="Soyisim Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>E-Mail</label>
                            <input type="email" class="form-control" name="EMail" placeholder="E-Mail Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Şifre</label>
                            <input type="password" class="form-control" name="Password" placeholder="Şifre Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Telefon</label>
                            <input type="tel" class="form-control" name="Phone" placeholder="Telefon Giriniz...">
                        </div>
                        <div class="modal-footer">
                            <button type="button" onclick="GetAdminData()" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                            <button type="button" submit-form="#admin-add-form" class="btn btn-success light">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

