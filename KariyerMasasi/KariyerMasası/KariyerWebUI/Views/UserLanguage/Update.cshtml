@model KariyerEntity.Entity.UserLanguage
@if (Model != null)
{
    <div class="modal fade" id="detailLanguageModal" aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Kullanıcı Dil Bilgisi Görüntüle</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>×</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("UpdateLanguage", "UserLanguage", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {@Html.HiddenFor(x => x.ID)
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Dil Seçimi</label>
                            <input required type="text" class="form-control" value="@Model.Language" name="LangLanguage" placeholder="Dil Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Konuşma Seviyesi</label>
                            <select class="custom-select2 form-control" name="SpeakingLevel">
                                <optgroup label="Seviye Seçiniz">
                                    <option value="@Model.SpeakingLevel">@Model.SpeakingLevel</option>
                                    <option @(Model.SpeakingLevel == "Başlangıç" ? "hidden " : "") value="Başlangıç">Başlangıç</option>
                                    <option @(Model.SpeakingLevel == "Temel" ? "hidden " : "") value="Temel">Temel</option>
                                    <option @(Model.SpeakingLevel == "Orta" ? "hidden " : "") value="Orta">Orta</option>
                                    <option @(Model.SpeakingLevel == "İleri" ? "hidden " : "") value="İleri">İleri</option>
                                    <option @(Model.SpeakingLevel == "Uzman" ? "hidden " : "") value="Uzman">Uzman</option>
                                </optgroup>
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Yazma Seviyesi</label>
                            <select class="custom-select2 form-control" name="WritingLevel">
                                <optgroup label="Seviye Seçiniz">
                                    <option value="@Model.WritingLevel">@Model.WritingLevel</option>
                                    <option @(Model.WritingLevel == "Başlangıç" ? "hidden " : "") value="Başlangıç">Başlangıç</option>
                                    <option @(Model.WritingLevel == "Temel" ? "hidden " : "") value="Temel">Temel</option>
                                    <option @(Model.WritingLevel == "Orta" ? "hidden " : "") value="Orta">Orta</option>
                                    <option @(Model.WritingLevel == "İleri" ? "hidden " : "") value="İleri">İleri</option>
                                    <option @(Model.WritingLevel == "Uzman" ? "hidden " : "") value="Uzman">Uzman</option>
                                </optgroup>
                            </select>
                        </div>
                      
                        <div class="form-group col-md-6">
                            <label>Dinleme Seviyesi</label>
                            <select class="custom-select2 form-control" name="ListeningLevel">
                                <optgroup label="Seviye Seçiniz">
                                    <option value="@Model.ListeningLevel">@Model.ListeningLevel</option>
                                    <option @(Model.ListeningLevel == "Başlangıç" ? "hidden " : "") value="Başlangıç">Başlangıç</option>
                                    <option @(Model.ListeningLevel == "Temel" ? "hidden " : "") value="Temel">Temel</option>
                                    <option @(Model.ListeningLevel == "Orta" ? "hidden " : "") value="Orta">Orta</option>
                                    <option @(Model.ListeningLevel == "İleri" ? "hidden " : "") value="İleri">İleri</option>
                                    <option @(Model.ListeningLevel == "Uzman" ? "hidden " : "") value="Uzman">Uzman</option>
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group col-md-12">
                            <label>Açıklama</label>
                            <input required type="text" value="@Model.Description" class="form-control" name="Description" placeholder="Açıklama Giriniz...">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="closeUser" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-success light ">Güncelle</button>
                    </div>
                }
                </div>
            </div>
        </div>
    </div>
}