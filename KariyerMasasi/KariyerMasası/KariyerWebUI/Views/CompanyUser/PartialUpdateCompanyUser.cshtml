@model KariyerEntity.Entity.CompanyUser
@if (Model != null)
{
    <div class="modal fade" id="detailModal" aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Şirket Personeli Görüntüle</h5>
                    <button onclick="GetCompanyUserData()" type="button" class="close" data-dismiss="modal">
                        <span>×</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Update", "CompanyUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {@Html.HiddenFor(x => x.ID)
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>İsim</label>
                            <input type="text" class="form-control" value="@Model.Name" name="Name" placeholder="İsim Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Soyisim</label>
                            <input type="text" class="form-control" value="@Model.Surname" name="Surname" placeholder="Soyisim Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Şifre</label>
                            <input type="password" class="form-control" value="@Model.Password" name="Password" placeholder="Şifre Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Ünvan</label>
                            <input type="text" class="form-control" value="@Model.Title" name="Title" placeholder="Ünvan Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>E-Mail</label>
                            <input type="email" class="form-control" value="@Model.EMail" name="EMail" placeholder="E-Mail Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Telefon</label>
                            <input type="tel" class="form-control" value="@Model.Phone" name="Phone" placeholder="Telefon Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Şirket</label>
                            <select required class="custom-select2 form-control" name="CompanyID">
                                <optgroup label="Şirket">
                                    <option value="@Model.CompanyID">@Model.Company.Name</option>
                                    @foreach (var item in ViewBag.CompanyID)
                                    {
                                        if (item.ID != Model.CompanyID)
                                        {
                                            <option value="@item.ID">@item.Name</option>
                                        }
                                    }
                                </optgroup>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="closeUser" onclick="GetCompanyUserData()" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-success light ">Güncelle</button>
                    </div>
                }
                </div>
            </div>
        </div>
    </div>
}