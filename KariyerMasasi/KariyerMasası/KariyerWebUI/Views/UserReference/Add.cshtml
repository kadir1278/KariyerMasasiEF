@model KariyerEntity.Entity.UserReference
<div class="modal fade" id="referenceModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Referans Ekle</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="Reference-add-form" method="post" role="form">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>İsim Soyisim</label>
                            <input type="text" class="form-control" name="ReferenceNameSurname" placeholder="İsim Soyisim Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Telefon</label>
                            <input type="tel" class="form-control"  name="ReferencePhone" placeholder="Telefon Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>E-Mail</label>
                            <input type="email" class="form-control" name="ReferenceEMail" placeholder="E-Mail Giriniz...">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="closeUser" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="submit" id="addBtn" class="btn btn-success light">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
