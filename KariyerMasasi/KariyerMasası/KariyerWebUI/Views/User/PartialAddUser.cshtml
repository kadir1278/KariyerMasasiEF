@model KariyerEntity.Entity.User
<div class="modal fade" id="basicModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Kullanıcı Ekle</h5>
                <button type="button" onclick="GetUserData()" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>
            <div class="modal-body" id="addModal">
                <form id="user-add-form" action="/kullanici-ekle">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>İsim</label>
                            <input type="text" class="form-control" name="Name" placeholder="İsim Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Soyisim</label>
                            <input type="text" class="form-control" name="Surname" placeholder="Soyisim Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>E-Mail</label>
                            <input type="email" class="form-control" name="EMail" placeholder="E-Mail Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Şifre</label>
                            <input type="password" class="form-control" name="Password" placeholder="Şifre Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Telefon</label>
                            <input type="tel" class="form-control" name="Phone" placeholder="Telefon Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Ülke</label>
                            <input type="text" class="form-control" name="Country" placeholder="Ülke Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Şehir</label>
                            <input type="text" class="form-control" name="City" placeholder="Şehir Giriniz...">
                        </div> <div class="form-group col-md-6">
                            <label>İlçe/Kasaba</label>
                            <input type="text" class="form-control" name="Town" placeholder="İlçe/Kasaba Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Adres</label>
                            <textarea class="form-control" rows="4" name="Address" id="comment" placeholder="Adres Giriniz..."></textarea>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Kullanıcı Tipi</label>
                            <select class="custom-select2 form-control" name="Type">
                                <optgroup label="Cinsiyet">
                                    <option value="Öğrenci">Öğrenci</option>
                                    <option value="Mezun">Mezun</option>
                                    <option value="Stajyer">Stajyer</option>
                                    <option value="Özel Kişi">Özel Kişi</option>
                                    <option value="Rehber">Rehber</option>
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Ünvan</label>
                            <input type="text" class="form-control" name="Title" placeholder="Ünvan Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Açıklama</label>
                            <textarea class="form-control" rows="4" name="Description" id="comment" placeholder="Adres Giriniz..."></textarea>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Çalışma Alanı</label>
                            @Html.DropDownList("BusinessAreaID", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-6">
                            <label>Askerlik Durumu</label>
                            <select class="custom-select2 form-control" name="MilitaryStatus">
                                <optgroup label="Cinsiyet">
                                    <option value="Yapıldı">Yapıldı</option>
                                    <option value="Yapılmadı">Yapılmadı</option>
                                    <option value="Tecilli">Tecilli</option>
                                    <option value="Muaf">Muaf</option>
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Cinsiyet</label>
                            <select class="custom-select2 form-control" name="Gender">
                                <optgroup label="Cinsiyet">
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadın">Kadın</option>
                                    <option value="Kadın">Belirtmek İstemiyorum</option>
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Evlilik Durumu</label>
                            <select class="custom-select2 form-control" name="MarriageStatus">
                                <optgroup label="Medeni Durum">
                                    <option value="Evli">Evli</option>
                                    <option value="Bekar">Bekar</option>
                                    <option value="Dul">Dul</option>
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group col-md-12">
                            <label>Hobi</label>
                            <textarea class="form-control" rows="4" name="Hobby" id="comment" placeholder="Hobi Giriniz..."></textarea>
                        </div>
                        <div class="form-group col-md-12" onclick="upload_user_photo()">
                            <button type="button" class="file-input btn light btn-primary">Fotoğraf Ekle</button>
                            @Html.HiddenFor(s => s.Photo)
                        </div>
                        <div class="form-group col-md-12">
                            <div class="update-photo">
                                <img hidden style="width: 250px;height: 250px;" class="image" id="img_user_photo" alt="">
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" onclick="GetUserData()" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="button" submit-form="#user-add-form" class="btn btn-success light">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>