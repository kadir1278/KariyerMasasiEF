@model KariyerEntity.Entity.UserSeminar
<div class="modal fade" id="seminarUpdateModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seminer Ekle</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Update", "UserSeminar", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {@Html.HiddenFor(x => x.ID)
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>İsim</label>
                        <input required type="text" class="form-control" value="@Model.Name" name="Name" placeholder="İsim Giriniz...">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Tarih</label>
                        <input required type="text" class="form-control mdate" @Model.Date name="Date" placeholder="İsim Giriniz...">
                    </div>
                    <div class="form-group col-md-12">
                        <label>Açıklama</label>
                        <input required type="text" class="form-control" @Model.Description name="Description" placeholder="Açıklama Giriniz...">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="closeUser" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                    <button type="submit" id="addBtn" class="btn btn-success light">Ekle</button>
                </div>
            }
            </div>
        </div>
    </div>
</div>
