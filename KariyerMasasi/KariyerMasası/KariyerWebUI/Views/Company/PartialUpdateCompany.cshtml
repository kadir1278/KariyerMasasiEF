
@model KariyerEntity.Entity.Company
@if (Model != null)
{

<div class="modal fade" id="detailModal" aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Şirket Görüntüle</h5>
                <button onclick="GetCompanyData()" type="button" class="close" data-dismiss="modal">
                    <span>×</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="company-edit-form" action="/sirket-guncelle" submit-success="GetData">
                    @Html.HiddenFor(x => x.ID)
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>İsim</label>
                            <input type="text" class="form-control" value="@Model.Name" name="Name" placeholder="İsim Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Ülke</label>
                            <input type="text" class="form-control" value="@Model.Country" name="Country" placeholder="Ülke Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>E-Mail</label>
                            <input type="email" class="form-control" value="@Model.EMail" name="EMail" placeholder="E-Mail Giriniz...">
                        </div>

                        <div class="form-group col-md-6">
                            <label>Telefon</label>
                            <input type="tel" class="form-control" value="@Model.Phone" name="Phone" placeholder="Telefon Giriniz...">
                        </div>

                        <div class="form-group col-md-6">
                            <label>Şehir</label>
                            <input type="text" class="form-control" value="@Model.City" name="City" placeholder="Şehir Giriniz...">
                        </div> <div class="form-group col-md-6">
                            <label>İlçe/Kasaba</label>
                            <input type="text" class="form-control" value="@Model.Town" name="Town" placeholder="İlçe/Kasaba Giriniz...">
                        </div>
                        <div class="form-group col-md-12">
                            <label>Adres</label>
                            @*<textarea class="form-control" rows="4" name="Address" id="comment" placeholder="Adres Giriniz..."></textarea>*@
                            @Html.TextAreaFor(x => x.Address, new { @rows = "4", @class = "form-control", @id = "comment", @placeholder = "Adres Giriniz...", })
                        </div>
                        <div class="form-group col-md-6">
                            <label>Fax</label>
                            <input type="text" class="form-control" value="@Model.Fax" name="Fax" placeholder="Fax Numaranızı Giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Çalışma Alanı</label>
                            @Html.DropDownList("BusinessAreaID", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-6">
                            <label>Vergi NO</label>
                            <input type="text" class="form-control" value="@Model.TaxNumber" name="TaxNumber" placeholder="Vergi Numaranızı giriniz...">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Vergi Adresi</label>
                            <input type="text" class="form-control" value="@Model.TaxAddress" name="TaxAddress" placeholder="Vergi Adresinizi Giriniz...">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" onclick="GetCompanyData()" class="btn btn-danger light" data-dismiss="modal">Kapat</button>
                        <button type="button" submit-form="#company-edit-form" class="btn btn-success light ">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>}
